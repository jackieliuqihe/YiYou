<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:padding="6dp"
    android:background="@drawable/channel2_list_item_bg"
    android:minHeight="?android:attr/listPreferredItemHeight"  >

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:src="@drawable/default_avatar_100" />
    
    <LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="vertical"
	  android:layout_marginLeft="2dp"
	  android:layout_toRightOf="@id/user_avatar" >
	  
	    <TextView
	  		android:id="@+id/user_name"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="4dp"
            android:singleLine="true" 
	  		android:gravity="left"
	  		android:textColor="#233340"
	  		android:textSize="14sp" />
      
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="4dp">
	        
	        <ImageView
	      		android:id="@+id/sex_type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	      		android:layout_alignParentLeft="true"
	      		android:layout_centerVertical="true"
	      		android:gravity="left"
	            android:src="@drawable/icon_male" />
	        
	        <TextView
	      		android:id="@+id/user_type"
	      		android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:layout_centerVertical="true"
	      		android:layout_toRightOf="@id/sex_type"
	    		android:layout_marginLeft="4dp"
	      		android:textColor="@color/gray_color"
	      		android:textSize="12sp" />
	       
	        <TextView
	      		android:id="@+id/user_location"
	      		android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:layout_centerVertical="true"
	      		android:layout_toRightOf="@id/user_type"
		        android:paddingRight="65dp"
		        android:singleLine="true"
	    		android:layout_marginLeft="4dp"
	      		android:textColor="@color/gray_color"
	      		android:textSize="12sp" />
	        
	        <TextView
	      		android:id="@+id/user_distance"
	      		android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:layout_alignParentRight="true"
	      		android:layout_centerVertical="true"
	    		android:layout_marginRight="4dp"
	      		android:textColor="@color/gray_color"
	      		android:textSize="12sp" />
	        
	        <!-- 
	        <TextView
	      		android:id="@+id/works_count"
	      		android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:layout_alignParentRight="true"
	      		android:layout_centerVertical="true"
	    		android:layout_marginRight="4dp"
	      		android:text=""
	      		android:textColor="@color/gray_color"
	      		android:textSize="12sp" />
	        -->
	    </RelativeLayout>
	    
        <TextView
      		android:id="@+id/user_desc"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
	  		android:singleLine="true"
      		android:textColor="@color/gray_color"
      		android:textSize="12sp" />
       
    </LinearLayout>
	    
</RelativeLayout>