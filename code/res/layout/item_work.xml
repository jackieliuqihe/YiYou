<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/work_list_item_bg"
    android:minHeight="?android:attr/listPreferredItemHeight" >

    <RelativeLayout
        android:id="@+id/user_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   		android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
   			android:layout_marginLeft="4dp"
   			android:layout_marginRight="8dp"
            android:gravity="left"
            android:src="@drawable/default_avatar_50" />
        
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:layout_centerVertical="true"
		    android:orientation="vertical"
      		android:layout_toRightOf="@id/user_avatar" >
             
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
   				android:layout_marginBottom="8dp">
		        
		        <TextView
		      		android:id="@+id/user_name"
		      		android:layout_width="wrap_content"
		      		android:layout_height="wrap_content"
		      		android:layout_centerVertical="true"
		      		android:layout_alignParentLeft="true"
            		android:layout_marginRight="60dp"
            		android:singleLine="true" 
		      		android:gravity="left"
		      		android:textColor="#233340"
		      		android:textSize="14sp" />
		       
		        <TextView
		      		android:id="@+id/upload_time"
		      		android:layout_width="wrap_content"
		      		android:layout_height="wrap_content"
		      		android:layout_centerVertical="true"
		      		android:layout_alignParentRight="true"
      				android:layout_marginRight="4dp"
		      		android:gravity="right"
		      		android:textColor="@color/gray_color"
		      		android:textSize="12sp" />
		       
		    </RelativeLayout>
		    
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content">
		        
		        <ImageView
		      		android:id="@+id/sex_type"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		      		android:layout_alignParentLeft="true"
		      		android:layout_centerVertical="true"
		      		android:gravity="left"
		            android:src="@drawable/icon_male" />
		        
		        <TextView
		      		android:id="@+id/user_type"
		      		android:layout_width="wrap_content"
		      		android:layout_height="wrap_content"
		      		android:layout_centerVertical="true"
		      		android:layout_toRightOf="@id/sex_type"
      				android:layout_marginLeft="8dp"
		            android:singleLine="true"
		      		android:textColor="@color/gray_color"
		      		android:textSize="12sp" />
		       
		        <TextView
		      		android:id="@+id/user_location"
		      		android:layout_width="wrap_content"
		      		android:layout_height="wrap_content"
		      		android:layout_centerVertical="true"
		      		android:layout_toRightOf="@id/user_type"
      				android:layout_marginLeft="8dp"
		            android:singleLine="true"
		      		android:textColor="@color/gray_color"
		      		android:textSize="12sp" />
		        
		        <TextView
		      		android:id="@+id/user_distance"
		      		android:layout_width="wrap_content"
		      		android:layout_height="wrap_content"
		      		android:layout_centerVertical="true"
		      		android:layout_toRightOf="@id/user_location"
      				android:layout_marginLeft="8dp"
		            android:singleLine="true"
		      		android:textColor="@color/gray_color"
		      		android:textSize="12sp" />
		       
		    </RelativeLayout>
		    
        </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" >

        <ImageView
            android:id="@+id/work_thumb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="#e2e2e2"
            android:background="#e2e2e2" />
	        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
      		android:id="@+id/work_desc"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true"
      		android:layout_centerVertical="true"
      		android:ellipsize="end"
      		android:layout_marginLeft="4dp"
      		android:layout_marginRight="4dp"
      		android:layout_marginTop="4dp"
      		android:gravity="left"
	  		android:maxLines="2"
      		android:textColor="#656565"
      		android:textSize="12sp" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="8dp">
    
        <TextView
      		android:id="@+id/approve"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_centerVertical="true"
      		android:layout_alignParentLeft="true"
			android:layout_marginLeft="6dp"
      		android:textColor="@color/gray_color"
      		android:textSize="12sp" />
       
        <TextView
      		android:id="@+id/collect"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_centerVertical="true"
      		android:layout_toRightOf="@id/approve"
			android:layout_marginLeft="16dp"
      		android:textColor="@color/gray_color"
      		android:textSize="12sp" />
       
        <TextView
      		android:id="@+id/comment"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_centerVertical="true"
      		android:layout_toRightOf="@id/collect"
			android:layout_marginLeft="16dp"
      		android:textColor="@color/gray_color"
      		android:textSize="12sp" />
       
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
	    android:paddingLeft="4dp"
	    android:paddingRight="4dp"
	    android:paddingBottom="4dp">
    
	    <Button 
		    android:id="@+id/share_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true"
		    android:text=" 分享"
		    android:textSize="12sp"
		    android:textColor="@color/gray_color"
		    android:paddingTop="4dp"
		    android:paddingRight="4dp"
		    android:drawableLeft="@drawable/icon_share"
		    android:background="@android:color/white">
	  	</Button>
	    
	    <Button 
		    android:id="@+id/comment_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
      		android:layout_alignParentRight="true"
		    android:text=" 评论"
		    android:textSize="12sp"
		    android:textColor="@color/gray_color"
		    android:paddingLeft="4dp"
		    android:paddingTop="4dp"
		    android:paddingRight="4dp"
		    android:drawableLeft="@drawable/icon_comment"
		    android:background="@android:color/white">
	  	</Button>
	    
        <CheckBox
            android:id="@+id/collect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      		android:layout_toLeftOf="@id/comment_btn"
      		android:button="@drawable/custom_collect"
		    android:textColor="@color/gray_color"
		    android:layout_centerVertical="true"
		    android:paddingLeft="26dp"
		    android:paddingRight="18dp"
		    android:textSize="12sp"
            android:text="收藏" />
	        
        <CheckBox
            android:id="@+id/approve_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      		android:layout_toLeftOf="@id/collect_btn"
      		android:button="@drawable/custom_prise"
		    android:textColor="@color/gray_color"
		    android:layout_centerVertical="true"
		    android:paddingLeft="26dp"
		    android:paddingRight="18dp"
		    android:textSize="12sp"
            android:text="赞" />
	        
	 </RelativeLayout>
</LinearLayout>
