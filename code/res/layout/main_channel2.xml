<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/list_item1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:clickable="true"
		android:background="@drawable/channel2_list_item_bg" >
		
        <ImageView
        	android:id="@+id/list_item1_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_xhy" />
        
		<TextView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/list_item1_icon"
			android:paddingTop="22dp"
			android:paddingBottom="22dp"
			android:paddingLeft="16dp"
			android:text="新画友"
			android:textSize="18sp"		
			android:textColor="@android:color/black" />
		
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_item2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:clickable="true"
		android:background="@drawable/channel2_list_item_bg" >
		
        <ImageView
        	android:id="@+id/list_item2_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_fjhy" />
        
		<TextView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/list_item2_icon"
			android:paddingTop="22dp"
			android:paddingBottom="22dp"
			android:paddingLeft="16dp"
			android:text="附近画友"
			android:textSize="18sp"		
			android:textColor="@android:color/black" />
		
	</RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/list_item3"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:clickable="true"
		android:background="@drawable/channel2_list_item_bg" >
		
        <ImageView
        	android:id="@+id/list_item3_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_zls" />
        
		<TextView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/list_item3_icon"
			android:paddingTop="22dp"
			android:paddingBottom="22dp"
			android:paddingLeft="16dp"
			android:text="找老师"
			android:textSize="18sp"		
			android:textColor="@android:color/black" />
		
	</RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/list_item4"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:clickable="true"
		android:background="@drawable/channel2_list_item_bg" >
		
        <ImageView
        	android:id="@+id/list_item4_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_zhs" />
        
		<TextView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/list_item4_icon"
			android:paddingTop="22dp"
			android:paddingBottom="22dp"
			android:paddingLeft="16dp"
			android:text="找画室"
			android:textSize="18sp"		
			android:textColor="@android:color/black" />
		
	</RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/list_item5"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:clickable="true"
		android:background="@drawable/channel2_list_item_bg" >
		
        <ImageView
        	android:id="@+id/list_item5_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_zxs" />
        
		<TextView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/list_item5_icon"
			android:paddingTop="22dp"
			android:paddingBottom="22dp"
			android:paddingLeft="16dp" 
			android:text="找学生"
			android:textSize="18sp"		
			android:textColor="@android:color/black" />
		
	</RelativeLayout>
    
    </LinearLayout>
    </ScrollView>
</LinearLayout>
